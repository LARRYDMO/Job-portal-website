@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-2xl font-bold mb-4">Create Account</h1>
<div class="bg-white p-6 rounded shadow">
    @if (Model.Error != null)
    {
        <div class="text-red-600 mb-4">@Model.Error</div>
    }
    <form method="post">
        <div class="mb-3">
            <label class="block text-sm">Full name</label>
            <input name="Name" class="w-full border px-3 py-2 rounded" value="@Model.Input.Name" />
        </div>
        <div class="mb-3">
            <label class="block text-sm">Email</label>
            <input name="Email" type="email" class="w-full border px-3 py-2 rounded" value="@Model.Input.Email" />
        </div>
        <div class="mb-3">
            <label class="block text-sm">I am a</label>
            <select name="Role" onchange="document.getElementById('companyRow').style.display = this.value === 'Employer' ? 'block' : 'none'" class="w-full border px-3 py-2 rounded">
                <option value="Candidate">Job Seeker</option>
                <option value="Employer">Employer</option>
            </select>
        </div>
        <div id="companyRow" style="display:none" class="mb-3">
            <label class="block text-sm">Company Name</label>
            <input name="CompanyName" class="w-full border px-3 py-2 rounded" value="@Model.Input.CompanyName" />
        </div>
        <div class="mb-3">
            <label class="block text-sm">Password</label>
            <input name="Password" type="password" class="w-full border px-3 py-2 rounded" />
        </div>
        <button class="bg-blue-600 text-white px-4 py-2 rounded">Register</button>
    </form>
</div>