@page
@model EmployerDashboardModel
@{
    ViewData["Title"] = "Employer Dashboard";
}

<h1 class="text-2xl font-bold mb-2">Employer Dashboard</h1>
@if (!string.IsNullOrEmpty(Model.CompanyName))
{
    <div class="text-slate-600 mb-4">Company: <strong>@Model.CompanyName</strong></div>
}

<div class="grid gap-4">
    @foreach (var job in Model.Jobs)
    {
        <div class="bg-white p-4 rounded border">
            <h3 class="font-bold">@job.Title</h3>
            <div class="text-sm text-slate-600">@job.Location</div>
            <div class="mt-2 text-sm text-slate-500">@job.SalaryRange @job.JobType @job.WorkMode</div>
        </div>
    }
</div>